{% extends 'base.html.twig' %}

{% block title %}Browse Jobs - Student Job Market{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-3">
        <!-- Search and Filters -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Search & Filter</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="searchQuery" class="form-label">Search Jobs</label>
                    <input type="text" class="form-control" id="searchQuery" placeholder="Job title, company...">
                </div>
                
                <div class="mb-3">
                    <label for="locationFilter" class="form-label">Location</label>
                    <select class="form-select" id="locationFilter">
                        <option value="">All Locations</option>
                        <option value="Remote">Remote</option>
                        <option value="Berlin">Berlin</option>
                        <option value="Munich">Munich</option>
                        <option value="Hamburg">Hamburg</option>
                        <option value="Frankfurt">Frankfurt</option>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label for="fieldFilter" class="form-label">Field</label>
                    <select class="form-select" id="fieldFilter">
                        <option value="">All Fields</option>
                        <option value="Software Development">Software Development</option>
                        <option value="Data Science">Data Science</option>
                        <option value="Marketing">Marketing</option>
                        <option value="Design">Design</option>
                        <option value="Sales">Sales</option>
                        <option value="Finance">Finance</option>
                        <option value="Customer Support">Customer Support</option>
                    </select>
                </div>
                
                <div class="mb-3">
                    <label for="employmentTypeFilter" class="form-label">Employment Type</label>
                    <select class="form-select" id="employmentTypeFilter">
                        <option value="">All Types</option>
                        <option value="internship">Internship</option>
                        <option value="part-time">Part-time</option>
                        <option value="full-time">Full-time</option>
                        <option value="freelance">Freelance</option>
                    </select>
                </div>
                
                <button type="button" class="btn btn-primary w-100" id="searchButton">
                    <i class="fas fa-search"></i> Search
                </button>
                
                <button type="button" class="btn btn-outline-secondary w-100 mt-2" id="clearFilters">
                    Clear Filters
                </button>
            </div>
        </div>
    </div>
    
    <div class="col-lg-9">
        <!-- Job Listings Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Available Jobs</h1>
            <div class="d-flex align-items-center">
                <span class="text-muted me-3" id="jobCount">Loading...</span>
                <div class="btn-group" role="group">
                    <input type="radio" class="btn-check" name="sortBy" id="sort-newest" value="newest" checked>
                    <label class="btn btn-outline-primary" for="sort-newest">Newest</label>
                    
                    <input type="radio" class="btn-check" name="sortBy" id="sort-oldest" value="oldest">
                    <label class="btn btn-outline-primary" for="sort-oldest">Oldest</label>
                </div>
            </div>
        </div>
        
        <!-- Loading State -->
        <div id="loadingSpinner" class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading job listings...</p>
        </div>
        
        <!-- Job Cards Container -->
        <div id="jobsContainer" class="d-none">
            <!-- Job cards will be dynamically inserted here -->
        </div>
        
        <!-- Empty State -->
        <div id="emptyState" class="text-center py-5 d-none">
            <i class="fas fa-search fa-4x text-muted mb-3"></i>
            <h3>No Jobs Found</h3>
            <p class="text-muted">Try adjusting your search criteria or check back later for new listings.</p>
        </div>
        
        <!-- Pagination -->
        <nav aria-label="Job pagination" id="paginationContainer" class="d-none">
            <ul class="pagination justify-content-center" id="pagination">
                <!-- Pagination items will be dynamically inserted here -->
            </ul>
        </nav>
    </div>
</div>

<!-- Job Card Template -->
<template id="jobCardTemplate">
    <div class="card mb-3 job-card" data-job-id="">
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <h5 class="card-title job-title"></h5>
                    <h6 class="card-subtitle mb-2 text-muted job-company"></h6>
                    <p class="card-text job-description"></p>
                    <div class="job-details">
                        <span class="badge bg-primary me-2 job-type"></span>
                        <span class="badge bg-secondary me-2 job-field"></span>
                        <small class="text-muted">
                            <i class="fas fa-map-marker-alt me-1"></i>
                            <span class="job-location"></span>
                        </small>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <div class="job-salary mb-2"></div>
                    <small class="text-muted job-date d-block mb-2"></small>
                    <a href="#" class="btn btn-outline-primary job-link">View Details</a>
                </div>
            </div>
        </div>
    </div>
</template>

<script>
// Initialize job browsing functionality when DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
    window.jobBrowser.init();
});
</script>
{% endblock %}